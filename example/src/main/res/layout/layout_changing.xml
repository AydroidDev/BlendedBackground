<?xml version="1.0" encoding="utf-8"?>
<com.alxgrk.blendedbackground.BlendedBackgroundLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bb_changing">

    <ToggleButton
        android:id="@+id/btn_changing"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:textOn="blue"
        android:textOff="green" />

    <ImageView
        android:id="@+id/iv_changing"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/description_image"
        android:layout_above="@id/btn_changing"
        android:layout_centerHorizontal="true"
        android:src="@drawable/green"
        android:tag="@string/bb_ref_tag" />
    
    <ToggleButton
        android:id="@+id/btn_add_remove"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_changing"
        android:layout_centerHorizontal="true"
        android:textOn="remove"
        android:textOff="add" />

    <Button
        android:id="@+id/btn_invert"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_add_remove"
        android:layout_centerHorizontal="true"
        android:text="invert" />

</com.alxgrk.blendedbackground.BlendedBackgroundLayout>